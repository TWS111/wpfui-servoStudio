<Page x:Name="page"
    x:Class="Wpf.Ui.servoStudio.Views.Pages.ParametersPages.FactoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf.Ui.servoStudio.Views.Pages.ParametersPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Wpf.Ui.servoStudio.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="FactoryPage"
    d:DataContext="{d:DesignInstance local:FactoryPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid Margin="20" 
          ShowGridLines="True"
          Width="{Binding ActualWidth, ElementName=page, Mode=OneWay}" 
          Height="{Binding ActualHeight, ElementName=page, Mode=OneWay}">
        <ui:Button
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="-470, 0, 0, 0"
            Content="自动读取"
            Icon="History24"
           Width="150"
            Command="{Binding ViewModel.AutoSendReadAchieveCommand, Mode=OneWay}" >
        </ui:Button>
        <ui:Button
            HorizontalAlignment="Center"            
            VerticalAlignment="Top"
            Margin="-160, 0, 0, 0"
            Content="手动读取"
            Command="{Binding ViewModel.AutoSendReadCancelCommand, Mode=OneWay}"
            Icon="History24"
            Width="150">
        </ui:Button>
        <ui:Button
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="150, 0, 0, 0"
            Content="手动写入"
            Icon="History24"
            Width="150"
            Command="{Binding ViewModel.ParametersWriteCommand, Mode=OneWay}">
        </ui:Button>
        <ui:Button
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="460, 0, 0, 0"
            Content="加密"
            Icon="History24"
            Command="{Binding ViewModel.VirtualAllSelectCommand, Mode=OneWay}"
            Width="150">
        </ui:Button>
        <ui:DataGrid 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top"
            Margin="0, 70, 0, 0" 
            IsReadOnly="False"
            ItemsSource="{Binding ViewModel.FactoryParametersCollection, Mode=TwoWay}">
        </ui:DataGrid>
        
    </Grid>
</Page>
