<Page
    x:Class="Wpf.Ui.servoStudio.Views.Pages.DeviceSetPages.DeviceAddPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf.Ui.servoStudio.Views.Pages.DeviceSetPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DeviceAddPage"
    d:DataContext="{d:DesignInstance local:DeviceAddPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">      
    
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="115*"/>
            <ColumnDefinition Width="489*"/>
        </Grid.ColumnDefinitions>

        <TabControl Grid.ColumnSpan="3" Margin="20, 40, 0, 0">
            <TabItem >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <TextBlock Text="EtherCAT" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Height="500"
                      Width="800">

                </Grid>
            </TabItem>
            <TabItem >
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <TextBlock Text="CANopen" 
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid  Height="500"
                       Width="800">

                </Grid>
            </TabItem>
            <TabItem IsSelected="True">
                <TabItem.Header >
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <TextBlock Text="modbus" 
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid  Height="500"
                       Width="800" >
                    <Label Content="串口号：" Width="80" Height="35"  Margin="63,30,657,535" Foreground="Black" FontSize="14" />
                    <Label Content="波特率：" Width="80" Height="35" Margin="63,96,657,469" Foreground="Black" FontSize="14"/>
                    <Label Content="数据位：" Width="80" Height="35" Margin="63,171,657,394" Foreground="Black" FontSize="14"/>
                    <Label Content="校验位：" Width="80" Height="35" Margin="63,250,657,315" Foreground="Black" FontSize="14"/>
                    <Label Content="停止位：" Width="80" Height="35" Margin="63,327,657,238" Foreground="Black" FontSize="14"/>
                    <ComboBox Width="150" Height="35" x:Name="name"
                        ItemsSource="{Binding ViewModel.ComboBoxPortNameFamilies, Mode =TwoWay}" 
                        SelectedIndex="{Binding ViewModel.ComboBoxPortNameSelect, Mode=TwoWay}"
                        Margin="164,21,486,0" VerticalAlignment="Top" />
                    <ComboBox Width="150" Height="35" x:Name="baud"
                        ItemsSource="{Binding ViewModel.ComboBoxBaudFamilies, Mode=TwoWay}"
                        SelectedIndex="{Binding ViewModel.ComboBoxBaudSelect, Mode=TwoWay}"
                        Margin="164,89,486,0" VerticalAlignment="Top" />
                    <ComboBox Width="150" Height="35" x:Name="databit" FontSize="20"
                        ItemsSource="{Binding ViewModel.ComboBoxDataBitFamilies, Mode=TwoWay}" 
                        SelectedIndex="{Binding ViewModel.ComboBoxDataBitSelect, Mode=TwoWay}"
                        Margin="164,164,486,0" VerticalAlignment="Top" />
                    <ComboBox Width="150" Height="35" x:Name="checkbit"
                        ItemsSource="{Binding ViewModel.ComboBoxCheckBitFamilies, Mode=TwoWay}" 
                        SelectedIndex="{Binding ViewModel.ComboBoxCheckBitSelect, Mode=TwoWay}"
                        Margin="164,244,486,0" VerticalAlignment="Top" />
                    <ComboBox Width="150" Height="35" x:Name="stopbit"
                        ItemsSource="{Binding ViewModel.ComboBoxStopBitFamilies, Mode=OneWay}"                               
                        SelectedIndex="{Binding ViewModel.ComboBoxStopBitSelect, Mode=TwoWay}"
                        Margin="164,318,486,0" VerticalAlignment="Top" />

                    <ui:Button Content="连接串口设备" Icon="Connector20" 
                               Margin="355,24,0,0" VerticalAlignment="Top" Height="35" Width="135"
                               Command="{Binding ViewModel.DeviceConnectCommand, Mode=OneWay}"
                               CommandParameter="{x:Type local:ListPage}"  />
                    <ProgressBar IsIndeterminate="False" 
                                 Height="6" Width="120"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="{Binding ViewModel.ProgressbarValue}" Margin="360,60,320,434"/>
                    <Label Content="√" FontWeight="Bold" FontSize="30"
                           Visibility="{Binding ViewModel.IsLinkSucceedVisible, Mode=OneWay}"
                           Height="35" Width="35" RenderTransformOrigin="7.357,-6.871" Margin="500,32,265,433" Foreground="#9E006D55" FontFamily="Segoe UI Black" Background="#CCFFFFFF" />
                    <Label Content="X" FontWeight="Bold" FontSize="30"
                           Visibility="{Binding ViewModel.IsLinkFailedVisible, Mode=OneWay}"
                            Height="35" Width="35" RenderTransformOrigin="7.357,-6.871" Margin="520,33,245,432" Foreground="#CCFC0A0A" FontFamily="Segoe UI Black" />
                    
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Page>