<Page
    x:Class="Wpf.Ui.servoStudio.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf.Ui.servoStudio.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Margin="20, 20, 20, 20" HorizontalAlignment="Center" VerticalAlignment="Center">

        <StackPanel Width="120" Height="60" HorizontalAlignment="Left" Margin="14,0,0,260">
            <ui:Button
            Command="{Binding ViewModel.CounterIncrementCommand, Mode=OneWay}"
            Content="Click!"
            Icon="{ui:SymbolIcon Autosum24}" Height="30" Width="82" />
        </StackPanel>

        <ui:Button
            Command="{Binding ViewModel.CounterClearCommand, Mode=OneWay}"
            Width="120"
            Height="120"
            Content="{Binding ViewModel.Counter, Mode=OneWay}"
            Padding="0"
            Appearance="Secondary"                        
            FontSize="25"
            Icon="AddCircle12" Margin="14,115,0,0" VerticalAlignment="Top" />

        <ui:Button
            HorizontalAlignment="Center"
            Command="{Binding ViewModel.CounterClearCommand, Mode=OneWay}"
            Width="200"
            Height="90"
            Icon="{ui:SymbolIcon PaddingDown20}" 
            Margin="445,50,0,0" 
            Content="添加设备"
            Padding="0"
            Appearance="Secondary"                        
            FontSize="25"
            VerticalAlignment="Top" />
        <ui:Button
            HorizontalAlignment="Center"
            Command="{Binding ViewModel.CounterClearCommand, Mode=OneWay}"
            Width="200"
            Height="90"
            Icon="{ui:SymbolIcon DismissSquareMultiple16}" 
            Margin="445,199,0,0" 
            Content="断开设备"
            Padding="0"
            Appearance="Secondary"                        
            FontSize="25"
            VerticalAlignment="Top" />


    </Grid>
</Page>
