<Page
    x:Class="Wpf.Ui.servoStudio.Views.Pages.FaultInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf.Ui.servoStudio.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Wpf.Ui.servoStudio.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="FaultInfoPage"
    d:DataContext="{d:DesignInstance local:FaultInfoPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid Margin="20">        
        <ui:Button
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="-470, 0, 0, 0"
            Content="读取历史故障"
            Icon="History24"
            Command="{Binding ViewModel.ProductsAchieveCommand}" >
        </ui:Button>
        <ui:Button
            HorizontalAlignment="Center"            
            VerticalAlignment="Top"
            Margin="-160, 0, 0, 0"
            Content="清除选定故障"
            Icon="History24">
        </ui:Button>
        <ui:Button
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="150, 0, 0, 0"
            Content="清除所有故障"
            Icon="History24"
            Command="{Binding ViewModel.ProductsClearCommand, Mode=OneWay}">
        </ui:Button>
        <ui:Button
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="460, 0, 0, 0"
            Content="全选/取消全选"
            Icon="History24"
            Command="{Binding ViewModel.VirtualAllSelectCommand, Mode=OneWay}">
        </ui:Button>
        <ui:DataGrid 
            HorizontalAlignment="Center" 
            Margin="0, 70, 0, 0" 
            IsReadOnly="True" 
            ItemsSource="{Binding ViewModel.ProductsCollection, Mode=TwoWay}">
        </ui:DataGrid>
    </Grid>
</Page>
