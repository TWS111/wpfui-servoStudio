<Page
    x:Class="Wpf.Ui.servoStudio.Views.Pages.DeviceSetPages.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf.Ui.servoStudio.Views.Pages.DeviceSetPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="StartPage"
    d:DataContext="{d:DesignInstance local:StartPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <StackPanel x:Key="DialogContent">
                <Image Source="/applicationIcon.ico" />
                <TextBlock Text="Lorem ipsum dolor sit amet, adipisicing elit." TextWrapping="Wrap" />
                <CheckBox Content="记住选择" />
            </StackPanel>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="20, 20, 20, 20" HorizontalAlignment="Center" VerticalAlignment="Center">

        <StackPanel Width="120" Height="60" HorizontalAlignment="Left" Margin="14,0,0,260">
        </StackPanel>
       
        <ui:DataGrid
            HorizontalAlignment="Left"
            VerticalContentAlignment="Top"
            Margin="200, 80, 0, 0"
            ItemsSource="{Binding ViewModel.DevicesCollection}"
            IsReadOnly="True">
        </ui:DataGrid>

        <ui:DataGrid
            HorizontalAlignment="Left"
            VerticalContentAlignment="Top"
            Margin="200, 80, 0, 0"
            ItemsSource="{Binding ViewModel.DevicesCollection}"
            IsReadOnly="True">
        </ui:DataGrid>
        
        <ui:Button      
            Command="{Binding ViewModel.ShowDialogCommand}"
            CommandParameter="{x:Type local:DeviceAddPage}"  
            VerticalAlignment="Top"
            Width="200"
            Height="90"
            Icon="{ui:SymbolIcon PaddingDown20}" 
            Margin="-30,-50,0,0" 
            Content=" 添加设备"
            HorizontalContentAlignment="Center"
            Padding="0"
            Appearance="Secondary"                        
            FontSize="25"/>
        <ui:Button             
            VerticalAlignment="Top"
            Width="200"
            Height="90"
            Icon="{ui:SymbolIcon PhoneCheckmark20}" 
            Margin="200,-50,0,0" 
            Content=" 选择为配置设备"
            HorizontalContentAlignment="Center"
            Padding="0"
            Appearance="Secondary"                        
            FontSize="25" />
        <ui:Button             
            VerticalAlignment="Top"
            Width="200"
            Height="90"
            Icon="{ui:SymbolIcon DismissSquareMultiple16}" 
            Margin="430,-50,0,0" 
            Content=" 断开设备"
            HorizontalContentAlignment="Center"
            Padding="0"
            Appearance="Secondary"                        
            FontSize="25" />        
    </Grid>
</Page>
